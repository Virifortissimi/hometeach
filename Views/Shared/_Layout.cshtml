<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Home Teach - Hire the best teachers around the world for your kids</title>

    <link rel="stylesheet" href="~/css/header.css" />
    <link rel="stylesheet" href="~/css/main.css" />
    @RenderSection("Styles", false)

    <script src="https://kit.fontawesome.com/55b74517c6.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&display=swap" rel="stylesheet">
</head>
<body class="hide-scroll-bar">
    <div id="loader">
        <div class="square"></div>
        <div class="square"></div>
        <div class="square"></div>
    </div>
    <header>
        <div class="container">
            <nav class="nav-bar">
                <a class="logo" asp-controller="Home" asp-action="Index">HOME<span>TEACH</span></a>
                <ul class="nav-lists">
                    <li class="nav-list">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">HOME</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                    <li class="nav-list">
                        <a class="nav-link" asp-controller="Teacher" asp-action="List">FIND TEACHER</a>
                    </li>
                    <li class="nav-list">
                        <a class="nav-link" asp-controller="Accounts" asp-action="Logout">LOGOUT</a>
                    </li>
                    <li class="nav-list">
                        <a class="btn btn-primary" asp-controller="Teacher" asp-action="Insert">TEACH</a>
                    </li>
                    }
                    else
                    {
                    <li class="nav-list">
                        <a class="nav-link" href="#how-it-works">HOW IT WORKS</a>
                    </li>
                    <li class="nav-list">
                        <a class="nav-link" asp-controller="Home" asp-action="Contact">CONTACT US</a>
                    </li>
                    <li class="nav-list">
                        <a class="nav-link" asp-controller="Accounts" asp-action="Register">REGISTER</a>
                    </li>
                    <li class="nav-list">
                        <a class="nav-link" asp-controller="Accounts" asp-action="Login">LOGIN</a>
                    </li>
                    <li class="nav-list">
                        <a class="btn btn-primary" asp-controller="Accounts" asp-action="Login">TEACH</a>
                    </li>
                    }
                </ul>

                <div class="hamburger-icon">
                    <div class="hamburger-line-1"></div>
                    <div class="hamburger-line-2"></div>
                    <div class="hamburger-line-3"></div>
                </div>
            </nav>
        </div>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            <nav class="footer-nav">
                <div>
                    <h4>Quick links</h4>
                    <ul class="nav-lists">
                        <li class="nav-list"><a class="nav-link" href="#">About us</a></li>
                        <li class="nav-list"><a class="nav-link" href="#">Get a Teacher</a></li>
                        <li class="nav-list"><a class="nav-link" href="#">Become a Teacher</a></li>
                        <li class="nav-list"><a class="nav-link" href="#">Contact Us</a></li>
                    </ul>
                </div>
                <div>
                    <h4>Follow Us</h4>
                    <ul class="nav-lists">
                        <li class="nav-list"><a class="nav-link" href="#">Twitter</a></li>
                        <li class="nav-list"><a class="nav-link" href="#">Facebook</a></li>
                        <li class="nav-list"><a class="nav-link" href="#">Instagram</a></li>
                    </ul>
                </div>
            </nav>
            <p class="copyright"> &copy; Copyright 2020 | HomeTeach</p>
        </div>
    </footer>
    <script defer src="~/js/app.js"></script>
    @*<script defer src="~/js/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    @RenderSection("Javascript", required: false)
</body>
</html>
